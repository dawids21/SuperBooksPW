<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatuszewskiStasiak.SuperBooks.MAUI.MainPage"
             Title="SuperBooks">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" HorizontalOptions="Center" VerticalOptions="Start">

            <Label Text="SuperBooks" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   FontAttributes="Bold"/>

            <Image Source="book.jpg" 
                   WidthRequest="150" 
                   HeightRequest="150" 
                   HorizontalOptions="Center" 
                   Aspect="AspectFit"/>

            <Label Text="Welcome to SuperBooks!" 
                   FontSize="18" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"/>

            <Label Text="Discover the world of books and publishers." 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"/>


            <!-- Add more content here as needed -->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
