<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MatuszewskiStasiak.SuperBooks.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MatuszewskiStasiak.SuperBooks.MAUI"
    Shell.FlyoutBehavior="Disabled"
    Title="MatuszewskiStasiak.SuperBooks.MAUI">
    <FlyoutItem>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        <ShellContent
        Title="Books List"
        ContentTemplate="{DataTemplate local:BooksPage}"
        Route="MainPage" />
    </FlyoutItem>

</Shell>
