@using MatuszewskiStasiak.SuperBooks.Core
@model IEnumerable<MatuszewskiStasiak.SuperBooks.Web.Models.BookDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get" style="max-width: 200px">
    <div class="form-group">
        <label class="control-label">Find by name: </label>
        <input type ="text" name="SearchName" value="@ViewData["SearchName"]" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Year published: </label>
        <select name="YearPublished" class="form-control" asp-items="@ViewData["YearsPublished"] as List<SelectListItem>"></select>
    </div>
    <div class="form-group">
        <label class="control-label">Type: </label>
        <select name="Type" class="form-control" asp-items="@ViewData["Types"] as List<SelectListItem>"></select>
    </div>
    <div class="form-group">
        <label class="control-label">Publisher: </label>
        <select name="Publisher" class="form-control" asp-items="@ViewData["Publishers"] as List<SelectListItem>"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Filter" class="btn btn-default" /> |
        <a asp-action="Index">Back to Full List</a>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearPublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearPublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
